{
  "name": "sidecar",
  "version": "0.1.0",
  "description": "AI companion agent that runs locally",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:local-router": "vitest run tests/local-router/",
    "test:local-router:watch": "vitest tests/local-router/",
    "test:fase3": "npx tsx tests/fase-3-embeddings.test.ts",
    "test:fase3:integration": "TEST_EMBEDDINGS=true npx tsx tests/fase-3-embeddings.test.ts",
    "test:integration": "npx tsx tests/integration/memory-lifecycle.test.ts && npx tsx tests/integration/health-system.test.ts && npx tsx tests/integration/state-persistence.test.ts",
    "test:all": "npm run test && npm run test:integration"
  },
  "keywords": [
    "ai",
    "agent",
    "companion",
    "llm"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.7.0",
    "node-cron": "^3.0.3",
    "sqlite-vec": "^0.1.7-alpha.2",
    "uuid": "^10.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
